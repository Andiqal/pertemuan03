<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background02"
    tools:context=".MainActivity3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Article"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Brawlstars, game dengan gameplay yang singkat dan desain karakter yang menarik."
        android:textColor="#a3bdc9"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="390dp"
        android:layout_height="229dp"
        app:srcCompat="@drawable/brawlstar" />

    <TextView
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:text="Pertandingan multiplayer 3v3 dan battle royale dengan tempo cepat yang dirancang untuk perangkat seluler! bermain bersama teman atau berjuanglah secara solo dalam berbagai mode laga di bawah tiga menit."
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back to Home"
        android:onClick="artoHome"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata"
        android:onClick="artobio"/>


</LinearLayout>